
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  email String  @unique @id
  feedback Feedback[]
}

model Block  { 
 block_name String @unique @id
  tickets Ticket[]
 }


 model Ticket {
        ticket_id String @id @unique
        ticket_number Int
        block_name String 
        block Block @relation(fields:[block_name], references:[block_name])
        description String
        guidance Guidance[]
        
    }

    model Guidance {
        guidance_id String @id 
        ticket_id String 
        ticket Ticket @relation(fields:[ticket_id], references:[ticket_id])
        type String
        guidance String
        feedback Feedback[]
    }

    model Feedback {
        feedback_id Int @id @default(autoincrement())
        www String
        ebi String
        user_email String
        email User @relation(fields:[user_email], references:[email])
        guidance_id String
        guidance Guidance @relation(fields:[guidance_id], references:[guidance_id])
    }